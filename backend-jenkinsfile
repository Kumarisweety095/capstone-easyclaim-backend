pipeline {
    agent any
    stages {
        stage ('Artifactory configuration') {
            steps {
                rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId: "artifactory",
                    releaseRepo: "libs-release-local",
                    snapshotRepo: "libs-snapshot-local"
                )

                rtMavenResolver (
                    id: "MAVEN_RESOLVER",
                    serverId: "artifactory",
                    releaseRepo: "libs-release",
                    snapshotRepo: "libs-snapshot"
                )
            }
        }
        stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool: 'maven',
                    pom: 'pom.xml',
                    goals: 'clean package',
                    deployerId: "MAVEN_DEPLOYER",
                    resolverId: "MAVEN_RESOLVER"
                )
            }
        }
        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "artifactory"
                )
            }
        }
        stage('SonarQube analysis') {
            environment {
                scannerHome = tool 'sonarscanner'
            }
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
        stage('Docker Build and Push') {
            steps {
                script {
                    docker.build("vigneshsweekaran/capstone:easyclaim-backend-${env.BUILD_ID}")
                    docker.withRegistry('', 'docker_credential') {
                        docker.image("vigneshsweekaran/capstone:easyclaim-backend-${env.BUILD_ID}").push()
                    }
                }
                sh "docker image prune -a -f"
            }
        }
        stage('Docker Pull & Deploy') {
            agent { label 'master'}
            steps {
                script {
                    docker.withRegistry('', 'docker_credential') {
                        docker.image("vigneshsweekaran/capstone:easyclaim-backend-${env.BUILD_ID}").pull()
                    }
                }
                sh "docker stop easyclaim-backend || true"
                sh "docker rm easyclaim-backend || true"
                sh "docker run -d --name easyclaim-backend -p 9002:80 vigneshsweekaran/capstone:easyclaim-backend-${env.BUILD_ID}"
                sh "docker image prune -a -f"
            }
        }
    }
}
